<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">email</th>
                    <th scope="col">aksi</th>
                  </tr>
                </thead>
                <tbody>

                  <% if (contacts.length === 0 ) { %>
                  <tr>
                    <td colspan="4">
                      <div class="alert alert-danger fw-bold" role="alert">
                        data contact masih kosong 
                      </div>
                    </td>
                  </tr>
 
                  <% } %> <% contacts.forEach((contact, i )=> { i ++ %>
                        <tr>
                          <th scope="row"><%= i++ %></th>
                          <td><%= contact.nama %></td>
                          <td><%= contact.nohp %></td>
                          <td><%= contact.email %></td>
                          <td>
                              <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i>detail</a>
                          </td>
                        </tr>
                    <% }) %>

                </tbody>
              </table>
        </div>
    </div>
</div>